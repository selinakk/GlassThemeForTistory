					<![CDATA[
					[
						{"name":"right", "label":"2단 우측 사이드바", "value":"right"},
						{"name":"drawer", "label":"1단 서랍 사이드바", "value":"drawer"}
					]
				]]>
				</option>
				<default>right</default>
			</variable>
		</variablegroup>

		<variablegroup name="목록 탐색 방법">
			<variable>
